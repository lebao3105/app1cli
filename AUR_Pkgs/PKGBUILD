pkgname = "app1cli"
pkgver = "1.0.28"
pkgrel="1"
pkgdesc = "Do more calculations and compare with app1."
arch = ("noarch")
license = ("GPL3")
source = ("app1.pas")
sha512sums = ("SKIP")
package() {
    mkdir -p "${pkgdir}/usr/bin"
    fpc "${srcdir}/app1.pas"
    cp "${srcdir}/app1" "${pkgdir}/usr/bin/app1"
    chmod +x "${pkgdir}/usr/bin/app1"
}