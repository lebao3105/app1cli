pkgname="app1cli"
pkgver="1.0.29-dev"
pkgrel="1"
pkgdesc="Do many calculations and compare with app1."
arch=("noarch")
license=("GPL3")
source=("Pascal/app1.pas")
sha512sums=("SKIP")
package() {
    mkdir -p "${pkgdir}/usr/bin"
    ./shellang.sh
    fpc "${srcdir}/app1.pas"
    cp "${srcdir}/app1" "${pkgdir}/usr/bin/app1"
    chmod +x "${pkgdir}/usr/bin/app1"
}